<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_payment_request" model="ir.actions.report">
        <field name="name">Payment Request Form</field>
        <field name="model">isp.payment.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ISP_Service_Management.report_payment_request_template</field>
        <field name="report_file">ISP_Service_Management.report_payment_request_template</field>
        <field name="print_report_name">'Payment Request - %s' % (object.id)</field>
        <field name="binding_model_id" ref="model_isp_payment_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_payment_request_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        /* Force A4 Margins via CSS */
                        .page {
                            margin-top: 10px;
                            padding: 10px;
                            font-family: "Arial", sans-serif;
                            max-width: 100%;
                            overflow-x: hidden;
                        }
                        
                        .pr-header { border-bottom: 2px solid #000; margin-bottom: 15px; padding-bottom: 10px; }
                        .pr-title { font-size: 22px; text-align: center; font-weight: bold; text-decoration: underline; }
                        
                        /* Main Table Styling */
                        .main-table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
                        .main-table tr { page-break-inside: avoid; }
                        .main-table td { border: 1px solid #333 !important; padding: 10px !important; font-size: 12px; }
                        .main-table td:first-child { font-weight: bold; background-color: #f5f5f5; width: 30%; }
                        
                        /* Approval Boxes */
                        .approval-row { width: 100%; margin-top: 30px; margin-bottom: 30px; display: table; table-layout: fixed; page-break-inside: avoid; }
                        .approval-box { 
                            display: table-cell;
                            border: 1px solid #333; 
                            height: 100px; 
                            text-align: center; 
                            vertical-align: top;
                            padding: 8px;
                            font-size: 12px;
                            width: 25%;
                        }

                        /* Bill Details Table */
                        .bill-table { 
                            width: 100%; 
                            border-collapse: collapse; 
                            margin-top: 15px;
                            page-break-inside: avoid;
                        }
                        
                        .bill-table thead {
                            display: table-header-group;
                            page-break-after: avoid;
                        }
                        
                        .bill-table thead tr {
                            background-color: #2c3e50 !important;
                            color: white !important;
                        }
                        
                        .bill-table thead th {
                            border: 1px solid #333 !important;
                            padding: 12px !important;
                            font-size: 12px !important;
                            font-weight: bold !important;
                            text-align: center !important;
                            word-break: break-word;
                        }
                        
                        .bill-table tbody tr {
                            page-break-inside: avoid;
                        }
                        
                        .bill-table tbody td {
                            border: 1px solid #ddd !important;
                            padding: 10px !important;
                            font-size: 11px !important;
                            word-wrap: break-word;
                            word-break: break-word;
                        }
                        
                        .bill-table tbody tr:nth-child(even) {
                            background-color: #f9f9f9;
                        }
                        
                        .bill-table tfoot tr {
                            background-color: #ecf0f1 !important;
                            font-weight: bold !important;
                        }
                        
                        .bill-table tfoot td {
                            border: 1px solid #333 !important;
                            padding: 12px !important;
                            font-size: 12px !important;
                        }
                        
                        /* Text alignment for amounts */
                        .text-right { text-align: right !important; }
                        
                        /* Section Headers */
                        .section-title {
                            font-size: 14px;
                            font-weight: bold;
                            margin-top: 25px;
                            margin-bottom: 15px;
                            text-align: center;
                            padding: 10px;
                            border-bottom: 2px solid #2c3e50;
                        }
                    </style>

                    <div class="page">
                        <div class="row pr-header">
                            <div class="col-4">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" 
                                    style="max-height: 60px; max-width: 150px;" alt="Logo"/>
                                <div style="font-size: 14px; font-weight: bold; margin-top: 5px;">
                                    <span t-field="res_company.name"/>
                                </div>
                            </div>
                            <div class="col-4 pr-title">Payment Request</div>
                           

                          

                            <div class="col-4 text-end">
                                <strong>Date: </strong>
                                <span t-field="o.request_date" t-options='{"widget": "date", "format": "MMM d, yyyy"}'/>
                            </div>
                        </div>

                        <table class="main-table mt-2">
                            <tr>
                                <td width="30%"><strong>Requesting Department</strong></td>
                                <td width="70%"><span t-field="o.requesting_department.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>Beneficiary Name</strong></td>
                                <td><span t-field="o.beneficiary.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>Currency: SAR</strong></td>
                                <td>
                                    <strong>Amount: <span t-field="o.amount" t-options='{"widget": "float", "precision": 2}'/></strong>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Description</strong></td>
                                <td style="height: 60px; vertical-align: top;">
                                    
                                    <span t-field="o.description"/>

                                   
                                   
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Related Bill</strong></td>
                                <td>
                                    <span t-if="o.bill_id" t-field="o.bill_id.name"/>
                                    <span t-else="">N/A</span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Method of Payment</strong></td>
                                <td>[ ] Cash &#160;&#160; [ ] Check &#160;&#160; [ ] Transfer</td>
                            </tr>
                        </table>

                        <div class="approval-row">
                            <div class="approval-box"><strong>Dept. Head</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>Chief Acct.</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>Finance Dir.</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>CEO</strong><br/><br/><br/>________________</div>
                        </div>

                        <div class="mt-2" style="font-size: 10px;">V.1.1 | Internal Use only</div>

                        <p style="page-break-before: always;"></p>

                        <div class="section-title">Detailed Attachment: Bill Lines</div>
                        <table class="bill-table">
                            <thead>
                                <tr>
                                    <th style="width: 8%;">Badge#</th>
                                    <th style="width: 22%;">Employee</th>
                                    <th style="width: 12%;">Service</th>
                                    <th style="width: 28%;">Line No.</th>
                                    <th style="width: 18%;">Payment#</th>
                                    <th style="width: 12%;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.bill_id.line_ids.sorted(key=lambda l: l.service_type_id.name)" t-as="line">
                                    <tr>
                                        <td style="text-align: center;"><span t-field="line.assign_employee_id.barcode"/></td>
                                        <td><span t-field="line.assign_employee_id.name"/></td>
                                        <td><span t-field="line.service_type_id.name"/></td>
                                        <td><span t-field="line.line_number"/></td>
                                        <td><span t-field="line.billing_account_number"/></td>
                                        <td class="text-right">
                                            <span t-field="line.amount" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5" class="text-right">Total Amount (SAR)</td>
                                    <td class="text-right">
                                        <span t-field="o.amount" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="footer text-end" style="font-size: 10px;">
                        Page <span class="page"/> of <span class="topage"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>