<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_payment_request" model="ir.actions.report">
        <field name="name">Payment Request Form</field>
        <field name="model">isp.payment.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ISP_Service_Management.report_payment_request_template</field>
        <field name="report_file">ISP_Service_Management.report_payment_request_template</field>
        <field name="print_report_name">'Payment Request - %s' % (object.id)</field>
        <field name="binding_model_id" ref="model_isp_payment_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_payment_request_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        /* Force A4 Margins via CSS since the record failed */
                        .page {
                            margin-top: 10px;
                            padding: 10px;
                            font-family: "Arial", sans-serif;
                        }
                        
                        .pr-header { border-bottom: 2px solid #000; margin-bottom: 15px; }
                        .pr-title { font-size: 22px; text-align: center; font-weight: bold; text-decoration: underline; }
                        
                        /* Table Borders */
                        .main-table { width: 100%; border-collapse: collapse; }
                        .main-table td { border: 1px solid black !important; padding: 8px !important; }
                        
                        /* Approval Boxes Fix */
                        .approval-row { width: 100%; margin-top: 20px; display: table; table-layout: fixed; }
                        .approval-box { 
                            display: table-cell;
                            border: 1px solid black; 
                            height: 100px; 
                            text-align: center; 
                            vertical-align: top;
                            padding: 5px;
                        }

                        /* Attachment Table */
                        .bill-table { width: 100%; border-collapse: collapse; margin-top: 15px; }
                        .bill-table th, .bill-table td { border: 1px solid black; padding: 5px; font-size: 11px; }
                    </style>

                    <div class="page">
                        <div class="row pr-header">
                            <div class="col-4">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" 
                                    style="max-height: 60px; max-width: 150px;" alt="Logo"/>
                                <div style="font-size: 14px; font-weight: bold; margin-top: 5px;">
                                    <span t-field="res_company.name"/>
                                </div>
                            </div>
                            <div class="col-4 pr-title">Payment Request</div>
                            <div class="col-4 text-end">
                                <strong>Date: </strong>
                                <span t-field="o.request_date" t-options='{"widget": "date", "format": "MMM d, yyyy"}'/>
                            </div>
                        </div>

                        <table class="main-table mt-2">
                            <tr>
                                <td width="30%"><strong>Requesting Department</strong></td>
                                <td width="70%"><span t-field="o.requesting_department.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>Beneficiary Name</strong></td>
                                <td><span t-field="o.beneficiary.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>Currency: SAR</strong></td>
                                <td>
                                    <strong>Amount: <span t-field="o.amount" t-options='{"widget": "float", "precision": 2}'/></strong>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Description</strong></td>
                                <td style="height: 60px; vertical-align: top;">
                                    <span t-field="o.description"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Method of Payment</strong></td>
                                <td>[ ] Cash &#160;&#160; [ ] Check &#160;&#160; [ ] Transfer</td>
                            </tr>
                        </table>

                        <div class="approval-row">
                            <div class="approval-box"><strong>Dept. Head</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>Chief Acct.</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>Finance Dir.</strong><br/><br/><br/>________________</div>
                            <div class="approval-box"><strong>CEO</strong><br/><br/><br/>________________</div>
                        </div>

                        <div class="mt-2" style="font-size: 10px;">V.1.1 | Internal Use only</div>

                        <p style="page-break-before: always;"></p>

                        <h4 class="text-center">Detailed Attachment: Bill Lines</h4>
                        <table class="bill-table">
                            <thead>
                                <tr style="background-color: #eee; font-weight: bold;">
                                   <th style="width: 10%;">Badge ID</th>
                                    <th style="width: 25%;">Employee</th>
                                    <th style="width: 15%;">Service</th>
                                    <th style="width: 35%;">Line No.</th>
                                    <th style="width: 20%;">Payment#</th>
                                    <th style="width: 15%; text-align: right;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.bill_id.line_ids" t-as="line">
                                    <tr>
                                       <td><span t-field="line.assign_employee_id.barcode"/></td>
                                        <td><span t-field="line.assign_employee_id.name"/></td>
                                        <td><span t-field="line.service_type_id.name"/></td>
                                        <td style="word-wrap: break-word;"><span t-field="line.line_number"/></td>
                                        <td style="word-wrap: break-word;"><span t-field="line.billing_account_number"/></td>
                                        <td style="text-align: right;">
                                            <span t-field="line.amount" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr style="background-color: #f9f9f9; font-weight: bold;">
                                    <td colspan="5" style="text-align: right;">Total Amount (SAR)</td>
                                    <td style="text-align: right;">
                                        <span t-field="o.amount" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="footer text-end" style="font-size: 10px;">
                        Page <span class="page"/> of <span class="topage"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>