<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ==================== Groups ==================== -->
        <record id="group_isp_user" model="res.groups">
            <field name="name">ISP User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_isp_manager" model="res.groups">
            <field name="name">ISP Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- ==================== Record Rules ==================== -->

        <!-- ISP Service: Users can see only services in their department -->
        <record id="isp_service_user_rule" model="ir.rule">
            <field name="name">ISP Service: Department Access</field>
            <field name="model_id" ref="model_isp_service"/>
            <field name="domain_force">[('assign_department_id','=',user.employee_ids.department_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_isp_user'))]"/>
        </record>

        <!-- ISP Service: Managers full access -->
        <record id="isp_service_manager_rule" model="ir.rule">
            <field name="name">ISP Service: Manager Access</field>
            <field name="model_id" ref="model_isp_service"/>
            <field name="groups" eval="[(4, ref('group_isp_manager'))]"/>
        </record>

        <!-- ISP Payment History: Users see only department payments -->
        <record id="isp_payment_history_user_rule" model="ir.rule">
            <field name="name">ISP Payment History: Department Access</field>
            <field name="model_id" ref="model_isp_payment_history"/>
            <field name="domain_force">[('department_id','=',user.employee_ids.department_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_isp_user'))]"/>
        </record>

        <!-- ISP Payment History: Managers full access -->
        <record id="isp_payment_history_manager_rule" model="ir.rule">
            <field name="name">ISP Payment History: Manager Access</field>
            <field name="model_id" ref="model_isp_payment_history"/>
            <field name="groups" eval="[(4, ref('group_isp_manager'))]"/>
        </record>

    </data>
</odoo>
