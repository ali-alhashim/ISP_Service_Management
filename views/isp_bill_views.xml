<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_isp_bill_list" model="ir.ui.view">
            <field name="name">isp.bill.list</field>
            <field name="model">isp.bill</field>
            <field name="arch" type="xml">
                <list string="ISP Bills">
                    <field name="name"/>
                    <field name="provider_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="total_amount" sum="Total"/>
                    <field name="state" widget="badge" 
                           decoration-info="state == 'draft'" 
                           decoration-warning="state == 'requested'" 
                           decoration-success="state == 'paid'"/>
                </list>
            </field>
        </record>

        <record id="view_isp_bill_form" model="ir.ui.view">
            <field name="name">isp.bill.form</field>
            <field name="model">isp.bill</field>
            <field name="arch" type="xml">
                <form string="ISP Bill">
                    <header>
                        <button name="action_confirm" 
                                string="Confirm &amp; Request Payment" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'draft'"/>
                        
                        <button name="action_post_payment" 
                                string="Register Payment" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'requested'"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="provider_id" readonly="state != 'draft'"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="date_from" readonly="state != 'draft'"/>
                                <field name="date_to" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bill Lines">
                                <field name="line_ids" readonly="state != 'draft'">
                                    <list editable="bottom">
                                        <field name="service_id"/>
                                        <field name="billing_account_number"/>
                                        <field name="line_number"/>
                                        <field name="amount" sum="Total Amount"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_isp_bill" model="ir.actions.act_window">
            <field name="name">ISP Bills</field>
            <field name="res_model">isp.bill</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Import your first ISP Bill!
                </p>
            </field>
        </record>

       
    </data>
</odoo>